<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_filter_tree" model="ir.ui.view">
        <field name="name">product.filter.tree</field>
        <field name="model">product.filter</field>
        <field name="arch" type="xml">
            <tree string="Filters">
                <field name="name"/>
                <field name="value_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="view_product_filter_form" model="ir.ui.view">
        <field name="name">product.filter.form</field>
        <field name="model">product.filter</field>
        <field name="arch" type="xml">
            <form string="Filter">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Values">
                            <field name="value_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="html_color" widget="color"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

